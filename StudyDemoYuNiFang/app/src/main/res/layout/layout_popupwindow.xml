<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_pop"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price_pop"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/iv_pop"
            android:layout_marginTop="20dp"
            android:text="333"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/tv_repertory_pop"
            android:layout_below="@+id/tv_price_pop"
            android:layout_toRightOf="@+id/iv_pop"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:text="333"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/tv_number"
            android:layout_below="@+id/tv_repertory_pop"
            android:layout_toRightOf="@+id/iv_pop"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:text="333"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="购买数量"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            >
            <RelativeLayout
                android:id="@+id/pw_jian"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jiajian"
                >
                <ImageView
                    android:id="@+id/pw_jianimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/reduce_unable"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jiajianfu"
                >
                <TextView
                    android:id="@+id/pw_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@android:color/black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pw_jia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jiajian"
                >
                <ImageView
                    android:id="@+id/pw_jiaimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_able"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/pw_queding"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@mipmap/bg_medley_succee_left"
        />
</LinearLayout>