<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="160sp"
        android:layout_height="260sp"
        android:src="@mipmap/home_rank_list_more"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/iv_hot1"
        android:layout_width="160sp"
        android:layout_height="220sp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_hot1"
        android:layout_width="160sp"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_hot1"
        android:text="dd" />

    <TextView
        android:id="@+id/tv_hot2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_hot1"
        android:layout_marginLeft="20dp"
        android:text="dd"
        android:textColor="#FF4081"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_hot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hot1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_hot2"
        android:text="dd"
        android:textSize="15dp" />
</RelativeLayout>