<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_effect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-- 按肤质 --"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="适合自己的才是最好" />

    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_skit_mixture"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#DEDEB9"
                android:gravity="center"
                android:text="#混合性肤质#" />

            <TextView
                android:id="@+id/tv_skit_neutral"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#EED4C2"
                android:gravity="center"
                android:text="#中性肤质#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_skit_dry"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#D4D7F7"
                android:gravity="center"
                android:text="#干性肤质#" />

            <TextView
                android:id="@+id/tv_skit_oily"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#D1E1C3"
                android:gravity="center"
                android:text="#油性肤质#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_skit_pimple"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#EED4C2"
                android:gravity="center"
                android:text="#痘痘肤质#" />

            <TextView
                android:id="@+id/tv_skit_sensitive"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#BFF1EC"
                android:gravity="center"
                android:text="#敏感肤质#" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>