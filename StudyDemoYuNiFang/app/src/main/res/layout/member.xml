<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_member_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_member_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/iv_member_image"
        android:text="多彩"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_member_price"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/tv_member_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/iv_member_image"
        android:text="50"
        android:textColor="#FF4081"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_member_markprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/tv_member_price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_member_image"
        android:text="50"
        android:textSize="17dp" />
</RelativeLayout>